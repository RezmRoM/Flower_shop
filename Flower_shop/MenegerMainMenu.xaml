        <DataGrid x:Name="zakazDataGrid" HorizontalAlignment="Left" Height="198" VerticalAlignment="Top" Width="792"/>
        <Button x:Name="oformBox1" Content="Оформить заказ" HorizontalAlignment="Left" Margin="178,317,0,0" VerticalAlignment="Top" Width="131" Click="OformBox_Click"/>
