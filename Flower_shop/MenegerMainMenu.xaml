        <ComboBox x:Name="tovarCombo" HorizontalAlignment="Left" Margin="106,264,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Клиент:" HorizontalAlignment="Left" Margin="50,219,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.465,0.24"/>
        <Label Content="Товар:" HorizontalAlignment="Left" Margin="50,260,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.465,0.24"/>
        <TextBox x:Name="colvoBox" HorizontalAlignment="Left" Height="23" Margin="383,223,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="ColvoBox_TextChanged"/>
        <TextBox x:Name="priceBox" HorizontalAlignment="Left" Height="23" Margin="383,263,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Количество:" HorizontalAlignment="Left" Margin="301,219,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.465,0.24"/>
        <Label Content="Цена:" HorizontalAlignment="Left" Margin="332,260,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.465,0.24"/>

    </Grid>
</Window>
