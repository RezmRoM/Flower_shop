<Window x:Class="Flower_shop.MainMenuCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flower_shop"
        mc:Ignorable="d"
        Title="Flower Shop - Каталог" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Конвертеры -->
        <local:QuantityToButtonTextConverter x:Key="QuantityToButtonTextConverter"/>
        <local:QuantityToEnabledConverter x:Key="QuantityToEnabledConverter"/>

        <!-- Стиль кнопки для товара -->
        <Style x:Key="ProductButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Quantity}" Value="0">
                    <Setter Property="Background" Value="#FFCCCCCC"/>
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="Content" Value="Скоро"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Анимации -->
        <Storyboard x:Key="CardHover">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                            To="20" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                            To="1.02" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                            To="1.02" Duration="0:0:0.2"/>
        </Storyboard>

        <Storyboard x:Key="CardUnhover">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                            To="10" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                            To="1" Duration="0:0:0.2"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                            To="1" Duration="0:0:0.2"/>
        </Storyboard>

        <!-- Шаблон карточки товара -->
        <DataTemplate x:Key="ProductCardTemplate">
            <Border x:Name="cardBorder" 
                    Width="300" 
                    Height="500"
                    Background="White"
                    CornerRadius="15"
                    Margin="10"
                    BorderThickness="1"
                    BorderBrush="#FFE4E4E4">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" 
                                    ShadowDepth="0"
                                    Color="#FFB6C1"/>
                </Border.Effect>
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Border.MouseEnter">
                        <BeginStoryboard Storyboard="{StaticResource CardHover}"/>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Border.MouseLeave">
                        <BeginStoryboard Storyboard="{StaticResource CardUnhover}"/>
                    </EventTrigger>
                </Border.Triggers>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Изображение товара -->
                    <Border Grid.Row="0" 
                            Background="#FFF5F5F5"
                            CornerRadius="15,15,0,0">
                        <Border CornerRadius="15,15,0,0" 
                                ClipToBounds="True">
                            <Image Source="{Binding Image_Url}"
                                   Stretch="UniformToFill"
                                   RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="15" 
                                                    ShadowDepth="0"
                                                    Color="#20000000"/>
                                </Image.Effect>
                            </Image>
                        </Border>
                    </Border>

                    <!-- Информация о товаре -->
                    <StackPanel Grid.Row="1" Margin="15,10">
                        <TextBlock Text="{Binding Product_Name}"
                                 FontSize="18"
                                 FontWeight="SemiBold"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,5"/>

                        <TextBlock Text="{Binding Description}"
                                 FontSize="14"
                                 Foreground="#666666"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,5"/>
                    </StackPanel>

                    <!-- Дополнительная информация -->
                    <StackPanel Grid.Row="2" Margin="15,0">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Категория: "
                                     Foreground="#666666"/>
                            <TextBlock Text="{Binding Category}"
                                     Foreground="#FF8C4B77"
                                     FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Поставщик: "
                                     Foreground="#666666"/>
                            <TextBlock Text="{Binding Postavchik}"
                                     Foreground="#FF8C4B77"
                                     FontWeight="SemiBold"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="В наличии: "
                                     Foreground="#666666"/>
                            <TextBlock Text="{Binding Quantity}"
                                     Foreground="#FF8C4B77"
                                     FontWeight="SemiBold"/>
                            <TextBlock Text=" шт."
                                     Foreground="#666666"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <TextBlock Text="Цена: "
                                     Foreground="#666666"/>
                            <TextBlock Text="{Binding Price, StringFormat='{}{0:N2} ₽'}"
                                     Foreground="#FF8C4B77"
                                     FontSize="16"
                                     FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Кнопка покупки -->
                    <Button Grid.Row="3"
                            Content="В корзину"
                            Style="{StaticResource ProductButtonStyle}"
                            Width="200"
                            Height="40"
                            Margin="15"
                            Click="AddToCart_Click"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <!-- Основное содержимое -->
    <Border Background="White" 
            CornerRadius="20" 
            Margin="10"
            x:Name="mainBorder"
            Opacity="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель с кнопками управления окном -->
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Right" 
                          Margin="0,0,5,0">
                    <Button Style="{StaticResource WindowButtonStyle}"
                            Content="—"
                            Click="MinimizeButton_Click"/>
                    <Button Style="{StaticResource WindowButtonStyle}"
                            Content="☐"
                            Click="MaximizeButton_Click"/>
                    <Button Style="{StaticResource WindowButtonStyle}"
                            Content="✕"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- Заголовок -->
            <TextBlock Grid.Row="1" 
                      Text="Каталог товаров"
                      FontSize="24"
                      FontWeight="SemiBold"
                      Foreground="#FF8C4B77"
                      HorizontalAlignment="Center"
                      Margin="0,20,0,20"/>

            <!-- Список товаров -->
            <Grid Grid.Row="2">
                <ScrollViewer Margin="20"
                             VerticalScrollBarVisibility="Hidden">
                    <ItemsControl x:Name="ProductsItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="mainBorder"
                                   Storyboard.TargetProperty="Opacity"
                                   From="0" To="1" Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
</Window>
